{{!< default}}
    <div class="callout large">
        <div class="row column text-center">
          <div class="large-3 columns">
          <img src="/blog/assets/img/logo_full.png">
          </div>
          <div class="large-9 columns" style="text-align:left;">
            <h1>FreeSide</h1>
            <p class="lead">FreeSide is a student run project at the University of Hull which offers free (in both free beer and free speech terms) Unix, Open and Alternative computing services to the student population of the University.</p><a class=
            "button large" href="http://www.freeside.co.uk/wiki/index.php?title=History">Learn More</a> <a class=
            "button large hollow" href="http://lesscss.org/">Learn Less</a>
            </div>
        </div>
    </div>
    <div id="content">
    <div class="row">
        <div class="large-12 columns">

	{{#foreach posts}}
	<article class="{{post_class}}">
	    <header class="post-header">
	        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
	    </header>
	    <section class="post-excerpt">
	        <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
	    </section>
	    <footer class="post-meta">
	        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
	        {{author}}
	        {{tags prefix=" on "}}
	        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
	    </footer>
	</article>
	{{/foreach}}

        </div>
    </div>
    </div>
